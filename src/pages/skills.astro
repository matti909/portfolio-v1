---
import Layout from '../layouts/Layout.astro';
import Container from '../components/ui/Container.astro';
import GithubIcon from '../components/ui/GithubIcon.astro';

const skills = [
  {
    category: "DevOps & Herramientas",
    items: ["Linux", "Git", "Python", "Bash"],
    github: "https://github.com/matti909/python-security-offensive-tools",
    isDisposable: true
  },
  {
    category: "Frameworks",
    items: ["React", "Angular", "Nest.js", "FastAPI"],
    github: "https://github.com/matti909?tab=repositories",
    isDisposable: true
  },
  {
    category: "Bases de Datos",
    items: ["PostgreSQL", "MongoDB", "Redis"],
    github: "https://github.com/topics/database",
    isDisposable: false
  },
  {
    category: "Cloud",
    items: ["AWS", "Vercel", "Docker"],
    github: "https://github.com/topics/cloud",
    isDisposable: false
  },
  {
    category: "Lenguajes",
    items: ["TypeScript", "JavaScript", "Python"],
    github: "https://github.com/topics/programming-language",
    isDisposable: false
  }
];
---

<Layout title="Skills - MattiDev">
  <Container>
    <section class="skills-page">
      <h1>Skills</h1>
      <p class="intro">Mis principales habilidades y tecnolog√≠as con las que trabajo.</p>

      <div class="skills-grid">
        {skills.map((skillGroup) => (
          <div class="skill-category">
            <h2>{skillGroup.category}</h2>
            <div class="skill-items">
              {skillGroup.items.map((skill) => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
            {skillGroup.isDisposable ? (
              <a href={skillGroup.github} target="_blank" rel="noopener noreferrer" class="category-github">
                <GithubIcon />
                <span>Explorar en GitHub</span>
              </a>
            ) : (
              <span class="category-github disabled">
                <GithubIcon />
                <span>Explorar en GitHub</span>
              </span>
            )}
          </div>
        ))}
      </div>
    </section>
  </Container>
</Layout>

<style>
  .skills-page {
    padding: var(--space-3xl) 0;
  }

  h1 {
    margin-bottom: var(--space-md);
  }

  .intro {
    color: var(--text-muted);
    font-size: var(--text-lg);
    margin-bottom: var(--space-3xl);
  }

  .skills-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .skill-category {
    background: var(--bg-color-secondary);
    border: var(--border-width-thick) solid var(--border-color);
    padding: var(--space-xl);
    box-shadow: var(--shadow-brutal);
    position: relative;
    padding: 1.5rem;
  }

  .skill-category h2 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-lg);
    text-transform: uppercase;
  }

  .skill-items {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .skill-tag {
    font-size: var(--text-base);
    font-weight: 700;
    text-transform: uppercase;
    padding: var(--space-sm) var(--space-lg);
    background: var(--accent-primary);
    border: 2px solid var(--border-color);
    color: var(--text-color);
  }

  :global([data-theme="dark"]) .skill-tag {
    color: #000000;
  }

  .category-github {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-top: var(--space-lg);
    padding: var(--space-sm) var(--space-md);
    background: var(--bg-color);
    border: 2px solid var(--border-color);
    color: var(--text-color);
    font-size: var(--text-sm);
    font-weight: 700;
    text-decoration: none;
    width: fit-content;
    transition: all 0.2s ease;
  }

  .category-github:hover:not(.disabled) {
    background: var(--accent-primary);
    transform: translateY(-2px);
  }

  :global([data-theme="dark"]) .category-github:hover:not(.disabled) {
    color: #000000;
  }

  .category-github.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  @media (max-width: 640px) {
    .skills-page {
      padding: var(--space-2xl) 0;
    }

    .skill-category {
      padding: var(--space-lg);
    }

    .skill-tag {
      padding: var(--space-xs) var(--space-md);
      font-size: var(--text-sm);
    }
  }
</style>
