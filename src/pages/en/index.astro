---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/ui/Container.astro'
import ContentList from '../../components/ui/ContentList.astro'
import Section from '../../components/ui/Section.astro'
import { getCollection, getEntry } from "astro:content"
import type { CollectionEntry } from "astro:content"
import { getLangFromUrl, useTranslations } from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const experiences = await getCollection("experience", ({ data }) => data.lang === lang);
const projects = await getCollection("projects", ({ data }) => data.lang === lang);

const siteConfig = await getEntry("site", lang);
if (!siteConfig) {
  throw new Error("Site configuration not found");
}

const site = siteConfig.data;

const formatDate = (date: Date | undefined) => {
  if (!date) return "";
  return date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
  });
};
---

<Layout title={`${site.name} - ${site.title}`}>
  <Container>
    <section class="hero">
       <h1>{site.name}</h1>
      <p class="subtitle">{site.title}</p>
      <p class="introduction">{site.introduction}</p>
      {
        site.socialLinks && (
          <div class="social-links">
            {site.socialLinks.map(({ platform, url }) => (
              <a href={url} target="_blank" rel="noopener noreferrer" class="btn-brutal">
                {platform}
              </a>
            ))}
          </div>
        )
      }
    </section>

    <section class="section">
      <div class="section-header">
        <h2>{site.sections.projects.title}</h2>
      </div>
      <ContentList>
        {
          projects.map((project) => (
            <article class="card-brutal">
              <div class="title-row">
                <a href={project.data.url} target="_blank" rel="noopener noreferrer">
                  {project.data.title}
                </a>
              </div>
              <p class="text-muted">{project.data.description}</p>
              {project.data.techs && (
                <div class="tags">
                  {project.data.techs.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </ContentList>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>{site.sections.experience.title}</h2>
      </div>
      <div class="content-list">
        {
          experiences.slice(0, 2).map((exp) => (
            <article class="card-brutal">
              <div class="title-row">
                <div class="company-info">
                  <img src={exp.data.logo} alt={exp.data.company} class="company-logo" />
                  <div class="company-details">
                    {exp.data.url ? (
                      <a href={exp.data.url} target="_blank" rel="noopener noreferrer" class="company-name">
                        {exp.data.company}
                      </a>
                    ) : (
                      <span class="company-name">{exp.data.company}</span>
                    )}
                    <span class="job-title">{exp.data.title}</span>
                  </div>
                </div>
                <time>
                {
                  (exp.data.startDate).toLocaleDateString(
                  "en-US", { year: "numeric", month: "short"})} -
              {exp.data.current ? "Present" : (exp.data.endDate)?.toLocaleDateString("en-US", {year: "numeric", month: "short"})
                }
                </time>
              </div>
              <p class="text-muted">{exp.data.description}</p>
              {exp.data.techs && (
                <div class="tags">
                  {exp.data.techs.map((tech) => (
                    <span>{tech}</span>
                  ))}
                </div>
              )}
            </article>
          ))
        }
      </div>
    </section>
  </Container>
</Layout>

<style>
  .hero {
    padding: var(--space-3xl) 0;
  }

  .introduction {
    margin: var(--space-lg) 0;
    font-size: var(--text-lg);
  }

  .social-links {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-xl);
    flex-wrap: wrap;
  }

  .section {
    margin: var(--space-3xl) 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-xl);
  }

  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
  }

  .company-info {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .company-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .company-name {
    font-weight: 700;
  }

  .job-title {
    font-size: var(--text-sm);
    color: var(--text-muted);
  }

  .company-logo {
    width: 3rem;
    height: 3rem;
    object-fit: contain;
  }

  time {
    font-size: var(--text-sm);
    color: var(--text-muted);
    white-space: nowrap;
  }

  .tags {
    display: flex;
    gap: var(--space-sm);
    margin-top: var(--space-md);
    flex-wrap: wrap;
  }

  .tags span {
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    padding: var(--space-xs) var(--space-sm);
    background: var(--accent-primary);
    border: 2px solid var(--border-color);
    color: var(--text-color);
  }

  /* Tags in dark mode need black text on bright background */
  :global([data-theme="dark"]) .tags span {
    color: #000000;
  }

  @media (max-width: 640px) {
    .hero {
      padding: var(--space-2xl) 0;
    }

    .title-row {
      flex-direction: column;
      align-items: flex-start;
    }

    .company-logo {
      width: 2.5rem;
      height: 2.5rem;
    }
  }
</style>
