---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/ui/Container.astro';

const skills = [
  {
    category: "DevOps & Tools",
    items: ["Linux", "Git", "Python", "Bash"],
    github: "https://github.com/topics/devops"
  },
  {
    category: "Frameworks",
    items: ["React", "Angular", "Nest.js", "FastAPI"],
    github: "https://github.com/topics/framework"
  },
  {
    category: "Databases",
    items: ["PostgreSQL", "MongoDB", "Redis"],
    github: "https://github.com/topics/database"
  },
  {
    category: "Cloud",
    items: ["AWS", "Vercel", "Docker"],
    github: "https://github.com/topics/cloud"
  },
  {
    category: "Languages",
    items: ["TypeScript", "JavaScript", "Python"],
    github: "https://github.com/topics/programming-language"
  }
];
---

<Layout title="Skills - MattiDev">
  <Container>
    <section class="skills-page">
      <h1>Skills</h1>
      <p class="intro">My main skills and technologies I work with.</p>

      <div class="skills-grid">
        {skills.map((skillGroup) => (
          <div class="skill-category">
            <h2>{skillGroup.category}</h2>
            <div class="skill-items">
              {skillGroup.items.map((skill) => (
                <span class="skill-tag">{skill}</span>
              ))}
            </div>
            <a href={skillGroup.github} target="_blank" rel="noopener noreferrer" class="category-github">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>Explore on GitHub</span>
            </a>
          </div>
        ))}
      </div>
    </section>
  </Container>
</Layout>

<style>
  .skills-page {
    padding: var(--space-3xl) 0;
  }

  h1 {
    margin-bottom: var(--space-md);
  }

  .intro {
    color: var(--text-muted);
    font-size: var(--text-lg);
    margin-bottom: var(--space-3xl);
  }

  .skills-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
  }

  .skill-category {
    background: var(--bg-color-secondary);
    border: var(--border-width-thick) solid var(--border-color);
    padding: var(--space-xl);
    box-shadow: var(--shadow-brutal);
    position: relative;
  }

  .skill-category h2 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-lg);
    text-transform: uppercase;
  }

  .skill-items {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .skill-tag {
    font-size: var(--text-base);
    font-weight: 700;
    text-transform: uppercase;
    padding: var(--space-sm) var(--space-lg);
    background: var(--accent-primary);
    border: 2px solid var(--border-color);
    color: var(--text-color);
  }

  :global([data-theme="dark"]) .skill-tag {
    color: #000000;
  }

  .category-github {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-top: var(--space-lg);
    padding: var(--space-sm) var(--space-md);
    background: var(--bg-color);
    border: 2px solid var(--border-color);
    color: var(--text-color);
    font-size: var(--text-sm);
    font-weight: 700;
    text-decoration: none;
    width: fit-content;
    transition: all 0.2s ease;
  }

  .category-github:hover {
    background: var(--accent-primary);
    transform: translateY(-2px);
  }

  :global([data-theme="dark"]) .category-github:hover {
    color: #000000;
  }

  @media (max-width: 640px) {
    .skills-page {
      padding: var(--space-2xl) 0;
    }

    .skill-category {
      padding: var(--space-lg);
    }

    .skill-tag {
      padding: var(--space-xs) var(--space-md);
      font-size: var(--text-sm);
    }
  }
</style>
