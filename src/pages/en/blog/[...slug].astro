---
import Layout from '../../../layouts/Layout.astro';
import Container from '../../../components/ui/Container.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => data.lang === 'en');
  return posts.map((post) => ({
    params: { slug: post.id.split('/').pop() },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} - Blog`}>
  <Container>
    <article class="blog-post">
      <header class="post-header">
        <time>{post.data.publishedAt.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}</time>
        <h1>{post.data.title}</h1>
        <p class="description">{post.data.description}</p>
      </header>

      <div class="post-content">
        <Content />
      </div>

      <footer class="post-footer">
        <a href="/en/blog" class="back-link">&larr; Back to blog</a>
      </footer>
    </article>
  </Container>
</Layout>

<style>
  .blog-post {
    max-width: 65ch;
    margin: 0 auto;
    padding: var(--space-3xl) 0;
  }

  .post-header {
    margin-bottom: var(--space-3xl);
  }

  .post-header time {
    font-size: var(--text-sm);
    font-weight: 700;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .post-header h1 {
    margin: var(--space-md) 0;
    font-size: var(--text-4xl);
    line-height: 1.2;
  }

  .description {
    font-size: var(--text-lg);
    color: var(--text-muted);
    line-height: 1.6;
  }

  .post-content {
    font-size: var(--text-base);
    line-height: 1.8;
  }

  .post-content :global(h2) {
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
    font-size: var(--text-2xl);
  }

  .post-content :global(h3) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
    font-size: var(--text-xl);
  }

  .post-content :global(p) {
    margin-bottom: var(--space-lg);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: var(--space-lg);
    padding-left: var(--space-xl);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-sm);
  }

  .post-content :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
  }

  .post-content :global(code) {
    background: var(--bg-secondary);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background: var(--bg-secondary);
    padding: var(--space-lg);
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: var(--space-lg);
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--accent-primary);
    padding-left: var(--space-lg);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--text-muted);
  }

  .post-footer {
    margin-top: var(--space-3xl);
    padding-top: var(--space-xl);
    border-top: 2px solid var(--border-color);
  }

  .back-link {
    font-weight: 700;
    color: var(--text-color);
  }

  .back-link:hover {
    color: var(--accent-primary);
  }

  @media (max-width: 640px) {
    .blog-post {
      padding: var(--space-2xl) 0;
    }

    .post-header h1 {
      font-size: var(--text-3xl);
    }
  }
</style>
